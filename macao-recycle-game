        }

        #score-display {
            font-size: 28px;
            margin: 15px 0;
            color: #f1c40f;
        }

        #timer {
            font-size: 40px;
            color: #ff7675;
            margin: 10px 0;
        }

        .trash-item {
            width: 200px;
            height: 200px;
            margin: 20px auto;
            border: 3px solid #fff;
