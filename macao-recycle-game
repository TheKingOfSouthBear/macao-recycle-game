    <!-- 音效 -->
    <audio id="correct-sound" src="https://assets.mixkit.co/sfx/preview/mixkit-correct-answer-tone-2870.mp3"></audio>
    <audio id="wrong-sound" src="https://assets.mixkit.co/sfx/preview/mixkit-wrong-answer-fail-notification-946.mp3"></audio>

<script>
// 游戏数据
const GAME_DATA = {
    score: 0,
    timeLeft: 15,
    currentTrash: null,
    timerId: null,
    questions: [
        { name: '啤酒瓶', type: 'glass', icon: 'fa-beer' },
        { name: '玻璃杯', type: 'glass', icon: 'fa-glass-whiskey' },
        { name: '保鮮盒', type: 'plastic', icon: 'fa-box-open' },
        { name: '塑膠瓶', type: 'plastic', icon: 'fa-bottle-water' },
        { name: '報紙', type: 'paper', icon: 'fa-newspaper' },
        { name: '紙箱', type: 'paper', icon: 'fa-box' },
        { name: '水銀溫度計', type: 'hazard', icon: 'fa-thermometer' },
        { name: '鋰電池', type: 'hazard', icon: 'fa-battery-full' },
        { name: '香蕉皮', type: 'organic', icon: 'fa-banana' },
        { name: '蛋殼', type: 'organic', icon: 'fa-egg' }
    ]
};

// 启动游戏
document.getElementById('start-btn').addEventListener('click', function() {
    // 隐藏开始界面
    document.getElementById('start-screen').style.display = 'none';
    document.getElementById('game-container').style.display = 'block';
    
    // 重置游戏状态
    GAME_DATA.score = 0;
    GAME_DATA.timeLeft = 15;
    updateScore();
    document.getElementById('timer').textContent = '15';
    
    // 显示第一个垃圾
    showRandomTrash();
    
    // 开始倒计时
    startTimer();
});

// 显示随机垃圾
function showRandomTrash() {
    const randomIndex = Math.floor(Math.random() * GAME_DATA.questions.length);
    GAME_DATA.currentTrash = GAME_DATA.questions[randomIndex];
    
    document.querySelector('.trash-item i').className = 'fas ' + GAME_DATA.currentTrash.icon;
    document.getElementById('trash-name').textContent = GAME_DATA.currentTrash.name;
}

// 开始倒计时
function startTimer() {
    clearInterval(GAME_DATA.timerId); // 清除旧计时器
    
    GAME_DATA.timerId = setInterval(function() {
        GAME_DATA.timeLeft--;
        document.getElementById('timer').textContent = GAME_DATA.timeLeft;
        
        // 最后3秒变红色
        if (GAME_DATA.timeLeft <= 3) {
            document.getElementById('timer').style.color = '#ff0000';
        }
        
        // 时间结束
        if (GAME_DATA.timeLeft <= 0) {
            clearInterval(GAME_DATA.timerId);
            setTimeout(function() {
                alert('遊戲結束！你的得分是: ' + GAME_DATA.score);
                location.reload(); // 重新加载页面
            }, 500);
        }
    }, 1000);
}

// 更新分数显示
function updateScore() {
    document.getElementById('score').textContent = GAME_DATA.score;
}

// 显示反馈
function showFeedback(isCorrect) {
    const feedback = document.getElementById('feedback');
    feedback.textContent = isCorrect ? '✓ 答對了！' : '✗ 答錯了';
    feedback.style.color = isCorrect ? '#2ecc71' : '#e74c3c';
    feedback.style.display = 'block';
    
    // 播放音效
    const sound = isCorrect ? 'correct-sound' : 'wrong-sound';
    document.getElementById(sound).currentTime = 0;
    document.getElementById(sound).play();
    
    // 1秒后隐藏反馈
    setTimeout(function() {
        feedback.style.display = 'none';
    }, 1000);
}

// 绑定垃圾桶点击事件
document.querySelectorAll('.bin').forEach(function(bin) {
    bin.addEventListener('click', function() {
        if (GAME_DATA.timeLeft <= 0) return; // 游戏结束不再响应
        
        const selectedType = this.getAttribute('data-type');
        const isCorrect = selectedType === GAME_DATA.currentTrash.type;
        
        // 更新分数
        GAME_DATA.score += isCorrect ? 10 : -5;
        updateScore();
        
        // 显示反馈
        showFeedback(isCorrect);
        
        // 显示新垃圾
        showRandomTrash();
    });
});
</script>
</body>
</html>
